@model LastMinuteToursWeb.Models.TourEditViewModel
@using LastMinuteTours.Entities

@{
    ViewData["Title"] = "Редактирование тура";
}

<h2>Редактирование тура</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-2">
        <label asp-for="Direction" class="form-label">Направление</label>
        <select asp-for="Direction"
                asp-items="Html.GetEnumSelectList<Direction>()"
                class="form-select">
            <option value="">-- выберите --</option>
        </select>
        <span asp-validation-for="Direction" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="DepartureDate" class="form-label">Дата вылета</label>
        <input asp-for="DepartureDate" class="form-control" />
        <span asp-validation-for="DepartureDate" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="NumberNights" class="form-label">Количество ночей</label>
        <input asp-for="NumberNights" class="form-control" />
        <span asp-validation-for="NumberNights" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="CostPerVacationer" class="form-label">Цена за отдыхающего (руб)</label>
        <input asp-for="CostPerVacationer" class="form-control" />
        <span asp-validation-for="CostPerVacationer" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="NumberVacationers" class="form-label">Количество отдыхающих</label>
        <input asp-for="NumberVacationers" class="form-control" />
        <span asp-validation-for="NumberVacationers" class="text-danger"></span>
    </div>

    <div class="form-check mb-2">
        <input asp-for="AvailabilityWiFi" class="form-check-input" />
        <label asp-for="AvailabilityWiFi" class="form-check-label">Wi-Fi</label>
    </div>

    <div class="mb-3">
        <label asp-for="Surcharges" class="form-label">Доплаты (руб)</label>
        <input asp-for="Surcharges" class="form-control" />
        <span asp-validation-for="Surcharges" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
