@model LastMinuteTours.Entities.TourModel

@{
    ViewData["Title"] = "Удаление тура";
}

<h2>Удаление тура</h2>

<div class="alert alert-danger">
    <strong>Вы уверены, что хотите удалить этот тур?</strong>
</div>

<table class="table table-bordered">
    <tr>
        <th>Направление</th>
        <td>@Model.Direction</td>
    </tr>
    <tr>
        <th>Дата вылета</th>
        <td>@Model.DepartureDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Стоимость</th>
        @((Model.CostPerVacationer * Model.NumberVacationers + Model.Surcharges).ToString("N2"))
    </tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
